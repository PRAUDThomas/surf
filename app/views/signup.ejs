<%- include('partials/header') %>

<main class="page">
    <section class="content">
        <h1 class="content-title">S'inscrire sur Surfer-Brands</h1>
        <p class="content-desc">Inscrivez vous pour ajouter des surfers</p>


<form action="/signup" method="POST" class="search">


  <div class="form-label-group">
    <input type="lastname" class="search-row" id="lastname" name="lastname" aria-describedby="lastnameHelp"
      placeholder="Votre nom">
      <label for="lastname">Votre nom</label>
  </div>

  <div class="form-label-group">
    <input type="firstname" class="search-row" id="firstname" name="firstname" aria-describedby="firstnameHelp"
      placeholder="Votre prénom">
      <label for="firstname">Votre prénom</label>
  </div>

  <div class="form-label-group">
    <input type="email" class="search-row" id="email" name="email" aria-describedby="emailHelp"
      placeholder="Votre courriel">
      <label for="email">Votre courriel</label>
  </div>

  <div class="form-label-group">
    <input type="password" class="search-row" id="password" name="password" placeholder="Votre mot de mot de passe">
    <label for="password">Votre mot de mot de passe</label>
  </div>


  <div class="form-label-group">
    <input type="password" class="search-row" id="passwordConfirm" name="passwordConfirm"
      placeholder="Confirmez votre mot de passe">
      <label for="passwordConfirm">Confirmez votre mot de passe</label>
  </div>

  <div class="form-group text-center">
    <button type="submit" class="btn btn-primary">Envoyer</button>
  </div>
</form>

</section>
</main>

<%- include('partials/footer') %>